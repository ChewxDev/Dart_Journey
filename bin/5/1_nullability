//! nullability
// int phoneNumber = null;
//From version 2.12 of dart it is impossible to define a variable as null, this is to avoid breakinng of the code after development.

void isEvenOrOdd(int value){
  if(value.isEven){
     print('$value is Even');
  }else{
    print('$value is Odd');
  }
}

void main(){
var value = 3;
isEvenOrOdd(value);

String? name;
name = 'Nick';//here the variable 'name' was promoted from nullable to non-nullable when it was initialized
print(name.length);
}